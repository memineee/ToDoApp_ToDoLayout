<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="logo_text_style">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/avenir_next_rounded_pro_demi</item>
    </style>

    <style name="on_boarding_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#313131</item>
        <item name="elevation">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/avenir_next_rounded_pro_demi</item>
    </style>

    <style name="on_boarding_title" parent="logo_text_style">
        <item name="android:layout_marginTop">12dp</item>
        <item name="lineHeight">28dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="on_boarding_message" parent="logo_text_style">
        <item name="android:layout_marginTop">12dp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#313131</item>
    </style>

    <style name="login_button_on_boarding" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/avenir_next_rounded_pro_demi</item>
    </style>

    <style name="login_input" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <style name="login_text" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#313131</item>
        <item name="fontFamily">@font/avenir_next_rounded_pro_demi</item>

    </style>

    <style name="title_text">
        <item name="fontFamily">@font/avenir_next_rounded_pro_demi</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="description_text">
        <item name="fontFamily">@font/avenir_next_rounded_pro_demi</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
    </style>
</resources>